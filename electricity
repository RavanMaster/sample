<html>
<head>
    <title>Electricity Bill</title>
    <script>
        function calculateBill(isDomestic) {
            const x = parseInt(document.getElementById('a1').value);
            const y = parseInt(document.getElementById('a2').value);
            if (x <= y) return alert("Enter correct unit");
            const uc = x - y;
            document.getElementById('uc').value = uc;
            let amt = uc >= 50 ? uc * (isDomestic ? 0.5 : 1) :
                      uc <= 100 ? uc * (isDomestic ? 1.00 : 1.50) :
                      uc <= 200 ? uc * (isDomestic ? 1.50 : 2.00) :
                      uc <= 300 ? uc * (isDomestic ? 2.00 : 2.50) :
                                  uc * 3.00;
            document.getElementById('amt').value = amt;
        }function resetForm() {
            document.querySelectorAll('input').forEach(input => input.value = "");
        }</script>
    <style>*{margin:5px;}
    body{display: flex;justify-content: center;align-items: center;flex-direction: column;}</style>
</head>
<body>
    <h1 align="center">ELECTRICITY BILL</h1>
    <h2>PERSONAL DETAILS</h2>
    <input type="text" id="name" placeholder="Customer Name"><br>
    <input type="text" id="add" placeholder="Address"><br>
    <input type="tel" id="phno" placeholder="Phone No"><br>
    <h2>CONSUMPTION DETAILS</h2>
    <input type="number" id="a1" placeholder="Current Reading"><br>
    <input type="number" id="a2" placeholder="Previous Reading"><br>
    <br><br>
    <button onclick="calculateBill(true)">DOMESTIC</button>
    <button onclick="calculateBill(false)">COMMERCIAL</button>
    <button onclick="resetForm()">REFRESH</button>
    <h2>BILL DETAILS</h2>
    <input type="text" id="uc" placeholder="Unit Consumed" readonly><br>
    <input type="text" id="amt" placeholder="Amount to Pay" readonly><br>
</body>
</html>
